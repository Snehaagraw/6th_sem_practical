<%- include('../partials/header') %>

<div class="container mt-4">
  <h2><%= game.gameName %></h2>
  <p><strong>Players:</strong> <%= game.numberOfPlayer %></p>
  <p><strong>Duration:</strong> <%= game.gameDuration %></p>
  <p><strong>Platform:</strong> <%= game.platform %></p>

  <% if (currentUser) { %>
    <a href="/games/<%= game._id %>/edit" class="btn btn-warning">Edit</a>
    <form action="/games/<%= game._id %>?_method=DELETE" method="POST" class="d-inline">
      <button class="btn btn-danger">Delete</button>
    </form>
  <% } %>

  <a href="/games" class="btn btn-secondary mt-2">Back</a>
</div>

<%- include('../partials/footer') %>
